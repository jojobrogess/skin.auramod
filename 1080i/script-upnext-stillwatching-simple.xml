<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">3012</defaultcontrol>
    <onload>Dialog.Close(fullscreeninfo,true)</onload>
    <onload>Dialog.Close(videoosd,true)</onload>
    <zorder>0</zorder>
    <controls>

        <control type="group">
            <include>Animation_FadeIn_Slide</include>
            <include>Animation_FadeOut</include>
            <control type="group">
                <height>80</height>

                <control type="label">
                    <width>auto</width>
                    <height>56</height>
                    <aligny>center</aligny>
                    <font>font32_title</font>
                    <textcolor>eeffffff</textcolor>
                    <shadowcolor>00000000</shadowcolor>
                    <label>$ADDON[service.upnext 30024]</label> <!-- Still Watching -->
                </control>

                <!-- Background -->

                <control type="image">
                    <top>0</top>
                    <width>100%</width>
                    <height>80</height>
                    <texture colordiffuse="dd000000">bg.png</texture>
                </control>

                <control type="group">
                    <top>12</top>
                    <left>20</left>
                    <width>75%</width>

                    <!-- buttons -->

                    <control type="button" id="3012">
                        <left>-1000</left>
                        <top>-1000</top>
                        <height>1</height>
                        <width>1</width>
                    </control>

                    <control type="grouplist" id="20">
                        <orientation>horizontal</orientation>
                        <height>56</height>
                        <itemgap>10</itemgap>
                        <align>left</align>
 <!-- Continue Watching -->
